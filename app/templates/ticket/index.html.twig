{% extends 'base.html.twig' %}

{% block title %}Ticket index{% endblock %}

{% block body %}
    <h1>Ticket index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Description</th>
                <th>User_Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td>{{ ticket.id }}</td>
                <td>{{ ticket.label }}</td>
                <td>{{ ticket.description }}</td>
                <td>{{ ticket.user.id}}</td>
                <td>
                    <a href="{{ path('app_ticket_show', {'id': ticket.id}) }}" class="btn btn-primary">Voir</a>
                    <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}" class="btn btn-warning">Editer</a>   
                </td>
                <td>{{ include('ticket/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ticket_new') }}" class="btn btn-primary">Nouveau</a>
{% endblock %}
